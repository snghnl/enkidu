{
  "name": "@enkidu/cli",
  "version": "1.0.0",
  "description": "Enkidu - Personal Knowledge Management CLI - Manage notes, daily journals, and publish to Docusaurus",
  "type": "module",
  "bin": {
    "enkidu": "./dist/cli.js"
  },
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "tsc --noEmit"
  },
  "keywords": [
    "enkidu",
    "knowledge-management",
    "cli",
    "notes",
    "journal",
    "markdown",
    "docusaurus",
    "wiki-links",
    "zettelkasten"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20.0"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "gray-matter": "^4.0.3",
    "remark": "^15.0.1",
    "remark-parse": "^11.0.0",
    "remark-stringify": "^11.0.0",
    "unified": "^11.0.4",
    "fuse.js": "^7.0.0",
    "cosmiconfig": "^9.0.0",
    "zod": "^3.23.8",
    "date-fns": "^3.3.1",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "inquirer": "^9.2.15",
    "globby": "^14.0.1",
    "execa": "^8.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.20",
    "@types/inquirer": "^9.0.7",
    "typescript": "^5.6.2",
    "tsup": "^8.0.2",
    "vitest": "^1.3.1"
  }
}
